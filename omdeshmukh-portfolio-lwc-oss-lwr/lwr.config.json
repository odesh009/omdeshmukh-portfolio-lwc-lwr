{
  "lwc": {
    "modules": [{ "dir": "$rootDir/src/modules" }]
  },
  "bundleConfig": { "exclude": ["lwc"] },
  "assets": [
    {
      "alias": "assetsDir",
      "dir": "$rootDir/src/assets",
      "urlPath": "/assets"
    }
  ],
  "routes": [
    {
      "id": "home",
      "path": "/",
      "rootComponent": "ui/app",
      "layoutTemplate": "$layoutsDir/index.html"
    }
  ]
}
