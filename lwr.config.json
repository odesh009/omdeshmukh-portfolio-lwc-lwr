{
  "lwc": {
    "modules": [{ "dir": "$rootDir/src/modules" }]
  },
  "bundleConfig": {
    "exclude": ["lwc", "lwr/navigation", "@lwc/synthetic-shadow"]
  },
  "assets": [
    {
      "alias": "assetsDir",
      "dir": "$rootDir/src/assets",
      "urlPath": "/assets"
    }
  ],
  "routes": [
    {
      "id": "home",
      "path": "/",
      "rootComponent": "pages/home",
      "layoutTemplate": "$layoutsDir/index.html",
      "bootstrap": {
        "syntheticShadow": true
      }
    },
    {
      "id": "about",
      "path": "/about",
      "rootComponent": "pages/about",
      "layoutTemplate": "$layoutsDir/index.html",
      "bootstrap": {
        "syntheticShadow": true
      }
    }
  ]
}
